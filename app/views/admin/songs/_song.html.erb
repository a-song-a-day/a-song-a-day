<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-sm-3 col-xs-4 m-x-auto">
        <%= link_to song.url, target: "_blank" do %>
          <%= image_tag song.image_url.presence || "default-art.jpg",
            alt: song.title, class: "img-rounded img-fluid" %>
        <% end %>
      </div>
      <div class="col-sm-9 col-xs-8">
        <h5><%= link_to song.title, song.url, target: "_blank" %></h5>

        <% if song.description.blank? %>
          <p class="text-warning">No description!</p>
        <% else %>
          <%= simple_format song.description %>
        <% end %>

        <% unless song.genres.empty? %>
          <p>
            <% song.genres.each do |genre| %>
              <span class="label label-info"><%= genre.name %></span>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
  <%= yield %>
</div>
