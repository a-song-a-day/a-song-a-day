<ol class="breadcrumb">
  <li><%= link_to "Curate", admin_curators_path %></li>
  <li><%= link_to @curator.title, admin_curator_path(@curator) %></li>
  <li class="active">Edit</li>
</ol>

<h1 class="m-b-2">
  <%= @curator.new_record? ? "Create" : "Edit" %>
  Curator Profile
</h1>

<%= simple_form_for [:admin, @curator], html: { class: "clearfix m-b-3" } do |f| %>
  <%= f.input :title, autofocus: true, hint: "e.g. Modern Eclectic" %>
  <%= f.input :description, input_html: { rows: 4 },
    wrapper_html: { data: { word_count: "20:50" } },
    hint: "Aim for around 20â€“50 words." %>

  <div class="pull-xs-right m-t-2">
    <%= link_to "Cancel", admin_curators_path, class: "btn btn-link" %>
    <%= f.submit "Save curator profile", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="text-muted">
  Your curator page also shows <%= link_to "your profile name and Gravatar", edit_admin_profile_path %>.
</div>
