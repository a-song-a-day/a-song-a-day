<% content_for :title, @user.name %>
<% crumb "Users", admin_users_path %>
<% crumb yield(:title), url_for %>

<div class="clearfix m-b-2">
  <h1 class="pull-xs-left">Profile</h1>
  <div class="pull-xs-right text-nowrap">
    <% if current_user.admin? %>
      <%= link_to "Masquerade", admin_masquerade_path(user_id: @user), method: "post", class: "btn btn-secondary" %>
      <%= link_to "Subscriptions", admin_user_subscriptions_path(@user), class: "btn btn-secondary" %>
    <% end %>
    <%= link_to "Edit profile", edit_admin_user_path(@user), class: "btn btn-primary" %>
  </div>
</div>

<%= render @user %>
