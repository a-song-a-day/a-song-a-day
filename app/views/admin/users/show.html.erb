<% content_for :title, @user.name %>
<% crumb "Users", admin_users_path %>
<% crumb yield(:title), url_for %>

<div class="clearfix m-b-2">
  <h1 class="pull-sm-left">Profile</h1>
  <div class="pull-sm-right">
    <%= form_tag admin_masquerade_path(user_id: @user), class: "btn-group" do %>
      <% if current_user.admin? %>
        <button type="submit" class="btn btn-secondary" data-disable-with="Masqueradingâ€¦">
          Masquerade
        </button>
        <%= link_to "Subscriptions", admin_user_subscriptions_path(@user),
          class: "btn btn-secondary" %>
      <% end %>
      <%= link_to "Edit profile", edit_admin_user_path(@user),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= render @user %>
