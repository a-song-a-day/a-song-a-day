<% content_for :title, "Genres" %>
<% crumb yield(:title), url_for %>

<div class="clearfix m-b-2">
  <h1 class="pull-sm-left"><%= yield :title %></h1>
  <%= link_to "Add new genre", new_admin_genre_path, class: "btn btn-primary pull-sm-right" %>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-6">
    <h2 class="m-b-2">Primary</h2>

    <% if @primary_genres.empty? %>
      <div class="alert alert-warning" role="alert">
        <strong>Whoops!</strong> There are no primary genres at the moment.
      </div>
    <% end %>

    <div class="list-group m-b-3">
      <% @primary_genres.each do |genre| %>
        <%= link_to genre.name, [:edit, :admin, genre], class: "list-group-item" %>
      <% end %>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <h2 class="m-b-2">Secondary</h2>

    <% if @secondary_genres.empty? %>
      <div class="alert alert-warning" role="alert">
        <strong>Whoops!</strong> There are no secondary genres at the moment.
      </div>
    <% end %>

    <div class="list-group m-b-3">
      <% @secondary_genres.each do |genre| %>
        <%= link_to genre.name, [:edit, :admin, genre], class: "list-group-item" %>
      <% end %>
    </div>
  </div>
</div>
