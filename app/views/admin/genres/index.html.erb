<div class="clearfix m-b-2">
  <h1 class="pull-xs-left">Genres</h1>
  <%= link_to "Add new genre", new_admin_genre_path, class: "btn btn-primary pull-xs-right" %>
</div>

<% if @genres.empty? %>
  <div class="alert alert-warning" role="alert">
    <strong>Whoops!</strong> There are no genres at the moment.
  </div>
<% end %>

<div class="list-group">
  <% @genres.each do |genre| %>
    <%= link_to genre.name, [:edit, :admin, genre], class: "list-group-item" %>
  <% end %>
</div>
